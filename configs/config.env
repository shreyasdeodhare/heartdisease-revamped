# Heart Disease Prediction Configuration

# Data Configuration
DATA_URL=https://github.com/shreyasdeodhare/Datasets101/raw/main/heart_2020_cleaned.csv
DATASET_PATH=./data/heart_disease.csv
OUTPUT_DIR=./outputs
MODEL_DIR="E:\\Heart-Disease\\app\\models"

BEST_MODEL = "E:\\Heart-Disease\\app\\models\\heart_disease_model_random forest_20251025_221307.pkl"
# Model Configuration
TEST_SIZE=0.2
RANDOM_STATE=42
CV_FOLDS=3
N_ITER_RANDOM_SEARCH=5

# SMOTE Configuration
SMOTE_RANDOM_STATE=42
SMOTE_K_NEIGHBORS=5

# Feature Selection
N_FEATURES_SELECT=15
CORRELATION_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/heart_disease_prediction.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Visualization Configuration
FIGURE_SIZE_LARGE=(18, 12)
FIGURE_SIZE_MEDIUM=(12, 8)
FIGURE_SIZE_SMALL=(10, 6)
DPI=300
STYLE=seaborn-v0_8

# Model Parameters
RF_N_ESTIMATORS=20
XGB_N_ESTIMATORS=20
LGB_N_ESTIMATORS=50
MAX_DEPTH=10
LEARNING_RATE=0.1

# Performance Thresholds
MIN_ACCURACY_THRESHOLD=0.7
MIN_F1_THRESHOLD=0.6
MIN_AUC_THRESHOLD=0.7

# Training Options
ENABLE_HYPERPARAMETER_TUNING=false
